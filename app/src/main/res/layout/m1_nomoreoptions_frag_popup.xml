<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".M1_NoAccSoloMode.M1_PrefSelect_Frag">

    <ImageView
        android:id="@+id/closeTrigger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="335dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="200dp"
        android:background="@android:color/white"
        tools:context=".M1_NoAccSoloMode.M1_PrefSelect_Frag">

        <TextView
            android:id="@+id/header_4a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/header_4a"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/devnote_4a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_4a"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="15dp"
            android:text="@string/devnote_4a"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/btn_4a"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devnote_4a"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp"
            android:background="@drawable/textview_border"
            android:padding="8dp"
            android:text="@string/btn_4a"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devnote_4a"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_border"
            android:padding="8dp"
            android:text="@string/btn_4b"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>