<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".M1_NoAccSoloMode.M1_SwipeDash_Frag">

    <TextView
        android:id="@+id/btn_devnomoreoptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:background="@drawable/textview_border"
        android:padding="8dp"
        android:text="@string/btn_devnomoreoptions"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="@string/header_3a" />

    <TextView
        android:id="@+id/devprompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="200dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/devnote_3a" />

    <TextView
        android:id="@+id/btn_devswiperight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/textview_border"
        android:text="@string/btn_devswiperight" />

    <TextView
        android:id="@+id/btn_devswipeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="140dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/textview_border"
        android:text="@string/btn_devswipeup" />

    <TextView
        android:id="@+id/btn_devswipedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/textview_border"
        android:text="@string/btn_devswipedown" />

</RelativeLayout>